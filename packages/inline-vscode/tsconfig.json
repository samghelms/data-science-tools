{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es6",
			"es2015.promise"
		],
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "./out",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	]
}